#!/usr/bin/env bash
# Git hook wrapper to run PowerShell build/tests (fall back to powershell on Windows if pwsh not available)
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
if command -v pwsh >/dev/null 2>&1; then
	exec pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File "$SCRIPT_DIR/pre-commit.ps1" "$@"
else
	exec powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File "$SCRIPT_DIR/pre-commit.ps1" "$@"
fi
